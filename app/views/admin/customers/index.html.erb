<div class="container my-3">

  <div class="row">
    <h1 class="bg-secondary p-2 text-white rounded-pill">ユーザー一覧</h1>
  </div>

  <div class="row">
  <table class="col-9 mx-auto table table-striped">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>名前</th>
        <th>メールアドレス</th>
      </tr>
    </thead>

    <% @customers.each do |customer| %>
      <tbody>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_path(customer) do %>
              <%= customer.name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
  </div>

  <div class="row">
    <div class="mx-auto"><%= paginate @customers %></div>
  </div>

</div>