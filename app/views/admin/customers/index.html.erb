<div class="container my-3">

  <h1>ユーザー一覧</h1>

  <table>
    <thead>
      <tr>
        <th>会員ID</th>
        <th>名前</th>
        <th>メールアドレス</th>
      </tr>
    </thead>

    <% @customers.each do |customer| %>
      <tbody>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_path(customer) do %>
              <%= customer.name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
        </tr>
      </tbody>
    <% end %>

  </table>

</div>