<div class="container my-3">

  <div class="row mb-4">
    <h1 class="bg-secondary p-2 text-white rounded-pill">新規登録</h1>
  </div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>



  <div class="field mb-3 font-weight-bold">
    <%= f.label :name, "名前" %>（ニックネーム）<br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field mb-3 font-weight-bold">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field mb-3 font-weight-bold">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field mb-3 font-weight-bold">
    <%= f.label :パスワードを再入力 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/customers/shared/links" %>

</div>
